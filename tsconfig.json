    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "baseUrl": "./packages",
    "jsx": "react",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
